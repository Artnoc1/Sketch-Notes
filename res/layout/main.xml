<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <LinearLayout  
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:background="@color/page_colour"
        >
        
        <ImageButton android:id="@+id/penButton" 
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:layout_marginTop="0sp"
	        android:layout_marginRight="5sp"
	        android:layout_marginBottom="0sp"
	        android:layout_marginLeft="5sp"
	        android:background="@color/selected_button_background"
            android:src="@drawable/draw_button"
            android:clickable="true"
            />
            
        <ImageButton android:id="@+id/eraserButton" 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="0sp"
            android:layout_marginLeft="5sp"
            android:background="@color/unselected_button_background"
            android:src="@drawable/eraser_button"
            android:clickable="true"
            />
    </LinearLayout>
    
    <view
	  class="com.manichord.sketchnotes.SketchView" 
	  android:id="@+id/skview"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
    />    
    
</LinearLayout>